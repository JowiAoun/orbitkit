{
  "name": "orbitkit",
  "private": true,
  "description": "A comprehensive, opinionated company monorepo boilerplate",
  "license": "MIT",
  "author": "OrbitKit",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "scripts": {
    "build": "bun nx run-many -t build -p @orbitkit/web @orbitkit/marketing",
    "commit": "git-cz",
    "dev": "bun nx run-many -t dev -p @orbitkit/docs @orbitkit/web @orbitkit/marketing",
    "format": "bun format:write",
    "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:write": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "lint": "eslint . --max-warnings 0",
    "lint:md": "markdownlint \"**/*.md\" --dot --ignore node_modules --ignore .changeset",
    "lint:spell": "cspell \"**\" --gitignore --dot --no-progress --cache --unique ",
    "prepare": "husky",
    "release": "bun nx run-many -t build lint typecheck && changeset version && changeset publish",
    "reset:changelog": "bun run rm -rf */**/CHANGELOG.md",
    "start": "bun nx run-many -t start -p @orbitkit/web @orbitkit/marketing",
    "test:e2e": "bun nx run-many -t test:e2e",
    "typecheck": "tsc",
    "update:workspace": "bun run ./scripts/update-workspace"
  },
  "lint-staged": {
    "*": [
      "cspell --no-must-find-files",
      "prettier --list-different"
    ],
    "**/*.{ts,tsx,js,jsx,cjs,mjs}": [
      "eslint"
    ],
    "**/*.{md,mdx}": [
      "markdownlint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@nx/next": "19.6.0",
    "@orbitkit/eslint": "workspace:^",
    "@orbitkit/tsconfig": "workspace:^",
    "@playwright/test": "^1.45.2",
    "@types/bun": "latest",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.11",
    "@types/yargs": "^17.0.32",
    "commitizen": "^4.3.0",
    "cspell": "^8.11.0",
    "eslint": "^9.7.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "markdownlint": "^0.34.0",
    "markdownlint-cli": "^0.41.0",
    "nx": "19.6.0",
    "pkg-types": "^1.1.3",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-packagejson": "^2.5.1",
    "typescript": "^5.5.3",
    "yargs": "^17.7.2"
  },
  "packageManager": "bun@1.1.12",
  "trustedDependencies": [
    "@sentry/cli",
    "esbuild",
    "nx",
    "puppeteer",
    "sharp"
  ]
}
